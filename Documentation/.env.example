#########################################
# üåê ALROUF LIGHTING - RFQ ‚Üí CRM AUTOMATION
# Environment Example (No Secrets)
# Use this template to create your local .env file.
# Replace placeholder values with real credentials before running.
#########################################

# ======= GOOGLE WORKSPACE INTEGRATIONS =======

# Google Sheets OAuth credentials for reading/writing RFQ_Master_Log & RFQ_Parsed_Data
GOOGLE_SHEETS_OAUTH_ID={{GOOGLE_SHEETS_OAUTH_ID}}
GOOGLE_SHEETS_ACCOUNT_NAME={{GOOGLE_SHEETS_ACCOUNT_NAME}}

# Google Drive OAuth credentials for uploading attachments (/RFQ_Attachments)
GOOGLE_DRIVE_OAUTH_ID={{GOOGLE_DRIVE_OAUTH_ID}}
GOOGLE_DRIVE_ACCOUNT_NAME={{GOOGLE_DRIVE_ACCOUNT_NAME}}

# Gmail OAuth credentials for IMAP trigger + Auto-Responder
GMAIL_OAUTH_ID={{GMAIL_OAUTH_ID}}
GMAIL_ACCOUNT_NAME={{GMAIL_ACCOUNT_NAME}}

# ======= EMAIL / IMAP SETTINGS =======

# IMAP connection credentials for inbound RFQ detection
IMAP_CREDENTIAL_ID={{IMAP_CREDENTIAL_ID}}
IMAP_ACCOUNT_NAME={{IMAP_ACCOUNT_NAME}}

# Optional: define IMAP mailbox and filters
IMAP_MAILBOX=INBOX
IMAP_FILTER="UNSEEN SUBJECT RFQ"
IMAP_INCLUDE_BINARY=true

# ======= AI / LLM PROCESSING =======

# Google Gemini (PaLM) API credentials for LLM-powered extraction
GEMINI_API_ID={{GEMINI_API_ID}}
GEMINI_API_NAME={{GEMINI_API_NAME}}

# ======= SLACK INTEGRATION =======

# Slack API credentials for sending internal notifications
SLACK_API_ID={{SLACK_API_ID}}
SLACK_ACCOUNT_NAME={{SLACK_ACCOUNT_NAME}}
SLACK_CHANNEL_ID={{SLACK_CHANNEL_ID}}
SLACK_WEBHOOK_ID={{SLACK_WEBHOOK_ID}}

# ======= GOOGLE DRIVE / SHEETS OBJECTS =======

# IDs of Drive and Sheet objects used by workflow
GOOGLE_SHEET_ID={{GOOGLE_SHEET_ID}}
GOOGLE_SHEET_TAB_MAIN=RFQ_Master_Log
GOOGLE_SHEET_TAB_PARSED=RFQ_Parsed_Data
GOOGLE_DRIVE_FOLDER_ID={{GOOGLE_DRIVE_FOLDER_ID}}
GOOGLE_DRIVE_FOLDER_NAME=RFQ_Attachments

# ======= GMAIL AUTOMATED RESPONDER =======

# Webhook used by Gmail node (auto-reply)
GMAIL_WEBHOOK_ID={{GMAIL_WEBHOOK_ID}}
AUTO_REPLY_SUBJECT="Re: Thank you for your RFQ ‚Äì We‚Äôve received your request"
AUTO_REPLY_TEMPLATE_PATH=Auto_Reply_Sample.txt

# ======= MOCK CRM CONFIGURATION =======

# Simulated CRM setup (used in Function Node)
CRM_SYSTEM=MockCRM
CRM_ID_PREFIX=MOCK-
CRM_DEFAULT_STATUS="Created (Mock)"

# ======= WORKFLOW METADATA =======

# Internal n8n identifiers (non-secret)
N8N_INSTANCE_ID={{N8N_INSTANCE_ID}}
WORKFLOW_VERSION_ID={{WORKFLOW_VERSION_ID}}

# ======= LOGGING & DIAGNOSTICS =======

# Enable or disable error logging
ENABLE_ERROR_LOGGING=true
ERROR_LOG_PATH=Workflow_JSON/Error_Log.json

#########################################
# END OF FILE
#########################################
